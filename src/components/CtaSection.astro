---
const { header, subText, theme = "bw", bg = false } = Astro.props;

import SectionHeadingCentered from "./SectionHeadingCentered.astro";
import SectionContainer from "./SectionContainer.astro";

const themes = {
    blue: {
        button: "bg-blue-300 hover:bg-blue-200 text-white-200",
        shapes: ["bg-blue-100", "bg-blue-200", "bg-blue-300"],
    },
    green: {
        button: "bg-green-300 hover:bg-green-200 text-white-200",
        shapes: ["bg-green-100", "bg-green-200", "bg-green-300"],
    },
    red: {
        button: "bg-red-300 hover:bg-red-200 text-white-200",
        shapes: ["bg-red-100", "bg-red-200", "bg-red-300"],
    },
    bw: {
        button: "bg-black-200 hover:bg-gray text-white-200",
        shapes: ["bg-red-200", "bg-green-200", "bg-blue-200"],
    },
};

const colors = themes[theme] ?? themes.bw;
---

<SectionContainer bg={bg}>
    <div class="relative">
        <!-- Foreground content -->
        <div class="relative z-20 max-w-2xl mx-auto text-center">
            <!-- Tagline -->
            <h3
                class="text-gray uppercase font-semibold tracking-widest text-sm sm:text-base mb-3"
            >
                Get Started
            </h3>

            <!-- Main Heading -->
            <SectionHeadingCentered
                header={header}
                subText={subText}
                theme={theme}
            />

            <!-- CTA Button -->
            <div class="mt-12">
                <a
                    href="/contact"
                    class={`inline-block hover:shadow-sm md:hover:shadow-md ${colors.button} font-semibold text-base sm:text-lg rounded-lg px-6 py-3 transition-colors`}
                >
                    Get in Touch
                </a>
                <p class="mt-2 text-gray text-sm">
                    Personalized demos available upon request
                </p>
            </div>
        </div>

        <!-- Background shapes -->
        <div
            class="absolute inset-0 z-0 pointer-events-none"
            aria-hidden="true"
        >
            <!-- Center small highlight -->
            <div
                class={`absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2
                w-6 h-6 md:w-10 md:h-10
                ${colors.shapes[0]} rounded-full
                shadow-sm md:shadow-md
                opacity-10 md:opacity-20`}
            >
            </div>

            <!-- Left triangle -->
            <div
                class={`absolute left-[4%] top-[18%]
                w-12 h-12 md:w-20 md:h-20
                ${colors.shapes[1]} clip-triangle
                shadow-sm md:shadow-md lg:shadow-lg
                opacity-15 md:opacity-30`}
            >
            </div>

            <!-- Left slab -->
            <div
                class={`absolute left-[10%] bottom-[20%]
                w-20 h-5 md:w-32 md:h-8
                ${colors.shapes[0]} clip-slab
                shadow-sm
                opacity-15 md:opacity-25
                rotate-[-6deg]`}
            >
            </div>

            <!-- Right triangle -->
            <div
                class={`absolute right-[6%] top-[25%]
                w-14 h-14 md:w-24 md:h-24
                ${colors.shapes[2]} clip-quad
                shadow-sm md:shadow-md lg:shadow-lg
                opacity-15 md:opacity-30`}
            >
            </div>

            <!-- Right cube -->
            <div
                class={`absolute right-[18%] bottom-[20%]
                w-12 h-12 md:w-16 md:h-16
                ${colors.shapes[1]} clip-triangle
                shadow-sm
                opacity-15 md:opacity-25
                rotate-[8deg]`}
            >
            </div>

            <!-- Mid-field circle -->
            <div
                class={`absolute left-[44%] top-[12%]
                w-8 h-8 md:w-12 md:h-12
                ${colors.shapes[2]} rounded-full
                shadow-sm
                opacity-15 md:opacity-25`}
            >
            </div>

            <!-- Mid-field slab -->
            <div
                class={`absolute right-[34%] bottom-[24%]
                w-14 h-5 md:w-20 md:h-6
                ${colors.shapes[0]} clip-slab
                shadow-sm
                opacity-15 md:opacity-25
                rotate-[4deg]`}
            >
            </div>
        </div>
    </div>
</SectionContainer>
