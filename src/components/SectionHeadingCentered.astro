---
const {
    header,
    subText,
    theme = "bw",
    ctaHref = false,
    ctaText = false,
} = Astro.props;

const themes = {
    blue: "text-blue-400",
    green: "text-green-400",
    red: "text-red-400",
    bw: "text-black-200",
};
const headerColor = themes[theme] ?? themes.bw;
---

<div class="max-w-3xl text-center mx-auto space-y-4">
    <h2
        id="features-heading"
        class={`${headerColor} text-2xl sm:text-3xl font-bold`}
    >
        {header}
    </h2>
    <p class="text-gray text-base sm:text-lg leading-relaxed">
        {subText}
    </p>
    {
        ctaHref &&
        ctaText &&
        typeof ctaHref === "string" &&
        typeof ctaText === "string" ? (
            <a class="block mx-auto w-fit btn-secondary" href={ctaHref}>
                {ctaText}
            </a>
        ) : null
    }
</div>
