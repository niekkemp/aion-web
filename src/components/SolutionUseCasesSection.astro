---
import SolutionUseCasesSectionCards from "./SolutionUseCasesSectionCards.astro";

const { header, subText, useCases } = Astro.props;
---

<section class="py-14 md:py-20" aria-labelledby="use-cases-heading">
    <div class="container">
        <!-- Section Heading -->
        <div class="max-w-2xl mb-12 text-center mx-auto">
            <h2
                id="use-cases-heading"
                class="text-blue-400 text-2xl sm:text-3xl font-bold"
            >
                {header}
            </h2>
            <p class="text-gray mt-3 text-base sm:text-lg leading-relaxed">
                {subText}
            </p>
        </div>

        <!-- Use Cases Grid -->
        <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-10"
        >
            {
                useCases.map((useCase) => (
                    <SolutionUseCasesSectionCards useCase={useCase} />
                ))
            }
        </div>
    </div>
</section>
