---
import { Image } from "astro:assets";
const { title, body, image } = Astro.props;
---

<section class="py-10 md:py-14">
    <div class="container grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Logo Card Column -->
        <div class="order-1 lg:order-2 flex justify-center">
            <div
                class="relative w-full flex items-center justify-center rounded-2xl shadow-lg bg-gradient-to-tr from-black-200 via-gray to-black-200 backdrop-blur-sm px-8 py-16 lg:py-40 xl:py-30"
            >
                <Image
                    src={image}
                    alt={title}
                    class="max-h-20 w-auto object-contain mx-auto grayscale invert brightness-0"
                    widths={[240, 360, 480, 768]}
                    sizes="(max-width: 768px) 60vw, 50vw"
                    format="webp"
                    loading="lazy"
                    decoding="async"
                />
            </div>
        </div>

        <!-- Text Column -->
        <div class="order-2 lg:order-1 space-y-6">
            <h2 class="text-2xl sm:text-3xl font-bold text-black-200">
                {title}
            </h2>
            <p class="text-gray leading-relaxed" set:html={body} />
        </div>
    </div>
</section>
