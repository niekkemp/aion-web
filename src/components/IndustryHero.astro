---
import { Image } from "astro:assets";
const { title, tagline, intro, image } = Astro.props;
---

<section
    class="relative bg-white-200 text-white-200 py-10 md:py-16 shadow-sm md:shadow-md"
>
    <div class="container">
        <!-- Hero Wrapper with Pill Feel -->
        <div
            class="relative w-full overflow-hidden rounded-[2rem] shadow-xl border border-gray/10"
        >
            <!-- Optimized Background Image -->
            {
                image && (
                    <Image
                        src={image}
                        alt={title}
                        class="absolute inset-0 w-full h-full object-cover object-center grayscale-75 brightness-25"
                        widths={[640, 1024, 1440, 1920]}
                        sizes="100vw"
                        format="webp"
                        loading="lazy"
                        decoding="async"
                    />
                )
            }

            <!-- Color Overlay Gradient -->
            <div
                class="absolute inset-0 bg-gradient-to-tr from-blue-200/30 via-red-200/20 to-green-200/30"
            >
            </div>

            <!-- Content -->
            <div class="relative z-10 px-6 md:px-12 lg:px-20 py-12 md:py-20">
                <div
                    class="max-w-2xl md:max-w-3xl lg:max-w-4xl text-center md:text-left"
                >
                    <!-- Title -->
                    <h1
                        class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-extrabold leading-tight mb-3 drop-shadow-lg"
                    >
                        {title}
                    </h1>

                    <!-- Tagline -->
                    {
                        tagline && (
                            <h2 class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-medium leading-snug mb-4 drop-shadow-lg">
                                {tagline}
                            </h2>
                        )
                    }

                    <!-- Intro Paragraph -->
                    {
                        intro && (
                            <p class="text-sm sm:text-base md:text-lg leading-relaxed max-w-2xl drop-shadow-lg">
                                {intro}
                            </p>
                        )
                    }
                </div>
            </div>
        </div>
    </div>
</section>
