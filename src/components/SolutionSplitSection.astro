---
import { Image } from "astro:assets";
const { title, body, image, reverse = false } = Astro.props;
---

<section class="py-10 md:py-14 text-center lg:text-start">
    <div class="container grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Text Column -->
        <div class={`space-y-6 ${reverse ? "lg:order-2" : ""}`}>
            <h2 class="text-2xl sm:text-3xl font-bold text-blue-400">
                {title}
            </h2>
            <p class="text-gray leading-relaxed" set:html={body} />
        </div>

        <!-- Image Column -->
        <div class={`relative ${reverse ? "lg:order-1" : ""}`}>
            <!-- Aspect Ratio Wrapper -->
            <div
                class="relative w-full aspect-[16/9] overflow-hidden rounded-2xl shadow-lg"
            >
                <Image
                    src={image}
                    alt={title}
                    class="w-full h-full object-cover object-center"
                    widths={[480, 768, 1024, 1440]}
                    sizes="(max-width: 768px) 100vw, 50vw"
                    format="webp"
                    loading="lazy"
                    decoding="async"
                />
                <!-- Gradient Overlay -->
                <div
                    class="absolute inset-0 bg-gradient-to-tr from-black-200/40 via-black-200/20 to-gray/50"
                >
                </div>
            </div>
        </div>
    </div>
</section>
