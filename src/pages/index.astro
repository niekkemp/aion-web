---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import homeHero from "../assets/home-hero.png";

import DetailsCard from "../components/DetailsCard.astro";
import CardCircledIconSection from "../components/CardCircledIconSection.astro";
import CardCircledIcon from "../components/CardCircledIcon.astro";

import SectionContainer from "../components/SectionContainer.astro";
import SectionSplit from "../components/SectionSplit.astro";
import CtaSection from "../components/CtaSection.astro";

import logo1 from "../assets/brand-airfi.png";
import logo2 from "../assets/brand-filmservice.png";
import logo3 from "../assets/brand-nbdb.png";
import logo4 from "../assets/brand-periscoop.png";

import industriesImg from "../assets/home-industries.jpg";
import aboutImg from "../assets/home-about.jpg";
import casesImg from "../assets/home-cases.jpg";

import { services } from "../data/home-services.js";

const solutions = [
	{
		header: "Offline & Mobile Infrastructure",
		text: "Secure, portable VOD technology via rugged gateway devices. Ideal for planes, trains, ships and remote field use. DRM-secure, offline-ready and instantly deployable.",
		icon: "M4 6h16M4 12h16M4 18h16",
	},
	{
		header: "Branded VOD Applications",
		text: "Fully branded iOS and Android apps with offline playback, monetization options and a polished user experience. Ready for content owners, creators and broadcasters.",
		icon: "M9 2h6a2 2 0 012 2v16a2 2 0 01-2 2H9a2 2 0 01-2-2V4a2 2 0 012-2z",
	},
	{
		header: "Ready-to-Launch Streaming Platform",
		text: "Launch in days, not months. Our white-label web-based VOD solution is customizable, monetization-ready and built to scale with your audience.",
		icon: "M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.347a1.125 1.125 0 0 1 0 1.972l-11.54 6.347a1.125 1.125 0 0 1-1.667-.986V5.653Z",
	},
	{
		header: "Custom Enterprise Solutions",
		text: "When standard tools are not enough, we design and deliver tailored platforms that match your workflows, business models and long-term strategy.",
		icon: "M12 4v1m6.364 1.636l-.707.707M20 12h-1m-1.636 6.364l-.707-.707M12 20v-1m-6.364-1.636l.707-.707M4 12h1m1.636-6.364l.707.707",
	},
];

const theme = "bw";
---

<Layout title="Home">
	<!-- Hero -->
	<header
		class="bg-gradient-to-tr from-black-200 via-black-200 to-gray text-white-200"
	>
		<div class="container py-16 md:py-20 lg:py-24">
			<!-- Hero Wrapper -->
			<div
				class="flex flex-col-reverse md:flex-row items-center justify-between gap-8 md:gap-4 md:h-[20rem] lg:h-[32rem] relative"
			>
				<!-- Left: Text Content -->
				<div
					class="max-w-md md:max-w-sm lg:max-w-lg xl:max-w-2xl text-center md:text-left z-20 flex flex-col justify-center h-full"
				>
					<h1
						class="font-extrabold leading-tight text-3xl sm:text-4xl md:text-3xl lg:text-4xl xl:text-5xl mb-3"
					>
						Media and entertainment without borders
					</h1>
					<h2
						class="font-medium leading-snug text-lg sm:text-xl md:text-xl lg:text-2xl xl:text-3xl mb-5"
					>
						Always, Everywhere, Secure.
					</h2>
					<p
						class="leading-relaxed mx-auto md:mx-0 text-base lg:text-lg mb-6"
					>
						With proven DRM technology and full offline
						functionality, AION delivers the only white-label video
						solutions that truly work end-to-end under demanding
						conditions.
					</p>
					<a
						href="#contact"
						class="relative inline-block w-auto flex-none self-start mx-auto md:mx-0
                   font-semibold text-base sm:text-lg rounded-lg
                   px-6 py-3
                   transition-all duration-300 ease-out
                   hover:shadow-md md:hover:shadow-lg
                   bg-white-200 text-black-200 hover:bg-white-100 hover:text-gray
                   before:content-[''] before:absolute before:inset-0 before:rounded-lg
                   before:bg-[conic-gradient(from_90deg_at_center,_#0467F1_0deg,_#E54F6D_120deg,_#44BBA4_240deg,_#0467F1_360deg)]
                   before:blur-xl before:opacity-90 before:-z-10
                   hover:before:opacity-100 hover:before:scale-105"
					>
						Get started →
					</a>
				</div>

				<!-- Right: Hero Image -->
				<!-- Right: Hero Image -->
				<div
					class="relative flex justify-center md:justify-end md:items-center w-full h-full sm:max-w-4/5 xl:max-w-[36rem] z-10"
				>
					<!-- Gradient glows -->
					<div class="absolute inset-0 -z-10">
						<!-- Existing glowing circle -->
						<div
							class="absolute inset-0 flex items-center justify-center"
						>
							<div
								class="w-64 h-64 rounded-full
        bg-[conic-gradient(from_90deg_at_center,_#0467F1_0deg,_#E54F6D_120deg,_#44BBA4_240deg,_#0467F1_360deg)]
        blur-3xl"
							>
							</div>
						</div>

						<!-- Corner glow: top-left -->
						<div
							class="absolute top-0 left-0 w-72 h-72 rounded-full
      bg-[#0467F1] blur-[180px] opacity-60"
						>
						</div>

						<!-- Corner glow: top-right -->
						<div
							class="absolute top-0 right-0 w-72 h-72 rounded-full
      bg-[#E54F6D] blur-[180px] opacity-60"
						>
						</div>

						<!-- Corner glow: bottom-left -->
						<div
							class="absolute bottom-0 left-0 w-72 h-72 rounded-full
      bg-[#44BBA4] blur-[180px] opacity-60"
						>
						</div>

						<!-- Corner glow: bottom-right (light gray) -->
						<div
							class="absolute bottom-0 right-0 w-72 h-72 rounded-full
      bg-gray-300 blur-[180px] opacity-50"
						>
						</div>
					</div>

					<!-- Foreground image -->
					<img
						src={homeHero.src}
						alt="Illustration showing AION secure media delivery"
						loading="lazy"
						class="z-20 object-contain max-h-[20rem] md:max-h-[24rem] lg:max-h-[28rem] xl:max-h-[32rem]"
					/>
				</div>
			</div>
		</div>
	</header>

	<!-- Brands -->

	<SectionContainer bg={true}>
		<div class="max-w-4xl mx-auto">
			<!-- Heading + gradient -->
			<div class="mx-auto text-center">
				<h2 class="text-2xl sm:text-3xl font-bold">
					Trusted by international brands
				</h2>
				<div
					class="mt-6 mb-6 h-0.5 w-full bg-gradient-to-r from-red-300 via-blue-300 to-green-300 rounded-full"
				>
				</div>
			</div>

			<!-- Brand logos -->
			<div
				class="grid grid-cols-2 sm:grid-cols-4 gap-8 items-center mx-auto max-w-3xl"
			>
				<Image
					src={logo1}
					alt="AirFi"
					class="mx-auto h-12 w-auto object-contain grayscale invert"
				/>
				<Image
					src={logo2}
					alt="Filmservice"
					class="mx-auto h-12 w-auto object-contain grayscale invert"
				/>
				<Image
					src={logo3}
					alt="NBDB"
					class="mx-auto h-12 w-auto object-contain grayscale"
				/>
				<Image
					src={logo4}
					alt="Periscoop"
					class="mx-auto h-12 w-auto object-contain grayscale invert"
				/>
			</div>
		</div>
	</SectionContainer>

	<!-- Core Solutions -->
	<SectionContainer>
		<!-- Section Heading -->
		<div class="max-w-3xl mb-12 text-center mx-auto">
			<h2
				id="solutions-heading"
				class="text-2xl sm:text-3xl font-bold text-black-200"
			>
				AION Core Solutions
			</h2>
			<p class="mt-3 text-base sm:text-lg leading-relaxed text-gray">
				Powerful video platforms built for every environment
			</p>
		</div>

		<!-- Features Grid -->
		<div
			class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-10"
		>
			{
				solutions.map((details) => (
					<CardCircledIcon
						header={details.header}
						text={details.text}
						icon={details.icon}
						theme={theme}
					/>
				))
			}
		</div>
		<a class="block mx-auto w-fit btn-secondary" href="/solutions"
			>Learn more →</a
		>
	</SectionContainer>

	<!-- Services -->
	<CardCircledIconSection
		theme="bw"
		header={services.header}
		subText={services.subText}
		cardDetails={services.items}
	/>

	<!-- Industries -->
	<SectionSplit
		header="Industries we serve"
		text={`<p class="text-lg text-gray">Trusted across the world’s most demanding sectors</p>
             <p class="mt-4">Defense & Government • Hospitals & Care Facilities • Maritime • Air Carriers • Education • Public Transport</p>`}
		image={industriesImg}
		ctaHref="/industries"
		ctaText="Learn more →"
	/>

	<!-- About -->
	<SectionSplit
		header="About AION Media Group"
		text={`<p class="text-lg text-gray">Based in Haarlem. Delivering worldwide.</p>
           <p class="mt-4">With team members who bring over 20 years of experience in DRM and video technology, AION Media Group builds secure, scalable platforms that deliver media where others cannot. We believe in partnerships and long-term collaboration to drive sustainable growth.</p>`}
		image={aboutImg}
		reverse
		bg={true}
		ctaHref="/about-us"
		ctaText="Learn more →"
	/>

	<SectionSplit
		header="Cases & Partnerships"
		text={`<p class="text-lg text-gray-600">Proven in the field</p>
             <p class="mt-4">From Filmservice to AirFi and NBD Biblion, our solutions power secure media delivery for leading organizations. And through partnerships with resellers, integrators and strategic collaborators, we scale these solutions globally.</p>`}
		image={casesImg}
		ctaHref={["/cases", "/partnerships"]}
		ctaText={["View cases →", "View partners →"]}
	/>

	<!-- CTA -->
	<div id="contact"></div>
	<CtaSection
		header="Where connectivity ends, AION begins"
		subText="Let’s discuss how we can deliver secure, scalable video solutions for your organization."
		bg={true}
	/>
</Layout>
